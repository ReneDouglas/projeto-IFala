# ----------------------------------------
# PostgreSQL - Credenciais do Banco
# ----------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_segura_aqui
POSTGRES_DB=ifala

# ----------------------------------------
# Spring Boot - Datasource
# ----------------------------------------
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/ifala
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=sua_senha_segura_aqui

# ----------------------------------------
# Keycloak - Admin Credentials
# ----------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=sua_senha_keycloak_segura

# ----------------------------------------
# Spring Security - JWT e Tokens
# ----------------------------------------
# Gere uma chave secreta forte (mínimo 256 bits / 32 caracteres)
# Exemplo: openssl rand -base64 32
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_minimo_32_caracteres

# ----------------------------------------
# Grafana - Admin Credentials
# ----------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=sua_senha_grafana_segura

